@import 'nib'
global-reset()
@import 'variables'

@import 'typography'

@import 'nav'
@import 'buttons'
@import 'home'
@import 'locus'
@import 'services'
@import 'contact'
@import 'slideshow'
@import 'footer'

html
body
  overflow-x hidden

.cl
  clearfix()

.right
  float right
.left
  float left

.body-wrap
  width 960px

.content
  margin    0 auto
  position  relative
  padding   40px 0 40px
  p
    margin-bottom 25px

#side-nav
  width      220px
  text-align right
  float      left
  .side-nav-link
    display       block
    clear         both
    font-size     22px
    font-weight   400
    color         black
    margin-bottom 20px
    position relative
    &.active
      color         $blue
      font-weight   500
    &.active:after
      background url(../img/ind-med.png) 0 0 no-repeat
      position   absolute
      content    ''
      width      14px
      height     13px
      top        7px
      right      -20px
    &:hover
      color $blue
  .location
    width          210px
    border-bottom  dotted 1px black
    padding-bottom 20px
    margin-bottom  20px
    &:last-child
      border none
    h2
      font-size     18px
      color         black
      margin-bottom 5px
    a
      color $blue
    p
      font-size     14px
      line-height   18px
      margin-bottom 5px
    &:last-child
      margin-bottom 0

.body
  width   680px
  margin-left 280px

.grid
  position    absolute 
  z-index     99999
  width       960px
  height      2000px
  left        50%
  margin-left -480px
  .col
    background   blue
    opacity      0.2
    width        280px
    height       100%
    margin-right 40px
    float        left
  .col+.col
    background green
    opacity 0.2  
    width 320px
    margin-right 0
  .col+.col+.col
    background red
    opacity 0.2  

@import 'media'

