footer
  border-top solid 5px $blue
  background $blue-dark
  clearfix()
#footer-contact
  padding 20px 40px 33px
  color   white
  max-width   960px
  margin  0 auto
  @media only screen and (max-width : 1024px)
    padding 20px 0 33px 
  clearfix()
  .location
    float      left
    width      320px
    text-align center
    @media only screen and (max-width : 1024px)
      width 33.333333%    
    h2
      font-size     16px
      margin-bottom 10px
      color         white
    p
      font-size 13px
    a
      color white
      &:hover
        text-decoration underline
#footer-copyright
  background #005e9c
  padding    18px 0 13px
  font-size  13px
  color      white
  @media screen and (max-width:768px)
    padding-left 20px
    padding-right 20px
  .wrap
    max-width 960px
    margin    0 auto
    clearfix()
    @media screen and (max-width:480px)
      .left
      .right
        float none
        text-align center
      .left
        margin-bottom 10px
.jc
  width       135px
  height      32px
  background  url(../img/jc-logo.png) no-repeat 0 3px
  text-indent -9999px
  margin-left 12px
  display     inline-block