body.home
  .content
    padding 0 0 45px
  h1
    font-size      22px
    font-weight    500
    color          black
    text-transform uppercase
    text-align     center
    margin-bottom  27px
    @media screen and (max-width:768px)
      padding 0 30px
  h2
    color          $blue
    font-size      18px
    font-weight    500
    text-transform uppercase
    margin-bottom  18px

#homepage-services
  margin 0 auto
  border-top     solid 1px #d4d4d4
  clearfix()
  @media screen and (max-width:480px)
    border-top none
.service
  width          320px
  float          left
  text-align     center
  padding        24px 30px 0
  vertical-align top
  position       relative
  box-sizing     border-box
  margin-bottom  20px
  @media only screen and (max-width : 1024px)
    width 33.333333%
  @media         screen and (max-width:480px)
    clear   both
    padding 0 50px
    width   100%
  &:after
    width      1px
    height     100%
    background linear-gradient(top, #f3f3f3,  #d4d4d4)
    right      0
    top        0
    content    ''
    position   absolute
    @media screen and (max-width:480px)
      background none
  &:last-child
    &:after
      background none
  p
    margin-bottom 20px

#hometab
  clearfix()
  margin 0 auto 60px
#hometab-nav
  width 320px
  float left
  @media only screen and (max-width : 1024px)
    width 33.333333%
  li
    background     #ededed
    border         solid 1px #b3b3b3
    border-bottom  none
    border-left    none
    color          #5d5d5d
    padding-left   36px
    height         62px
    line-height    62px
    text-transform uppercase
    box-sizing     border-box
    cursor         pointer
    font-weight    500
    &:hover
    &.active
      background   linear-gradient(top, #0094f0, #004fcf)
      border-color #00509c
      border-left  solid 1px #0055a6
      box-shadow   inset 0 1px 0 #49c1ff
      color        white

#hometab-content
  width        320px
  float        left
  border-top   solid 1px #b3b3b3
  border-right solid 1px #b3b3b3
  box-sizing   border-box
  height       180px
  @media only screen and (max-width : 1024px)
    width 33.333333%

  @media screen and (max-width:480px)
    clear both
  .tab-content
    display none
    padding 20px 30px
    p
      margin 0
    &.active
      display block

#contact-content
  border-top solid 1px #b3b3b3
  float      left
  width      320px
  padding    20px 30px 0
  box-sizing border-box
  @media only screen and (max-width : 1024px)
    width 33.333333%
