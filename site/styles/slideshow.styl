#slideshow
  position relative
  margin    0 auto 55px  
.cycle-slideshow
  position relative
  width    100%
  height   330px
  img
    left        50% !important
    margin-left -1000px 


#caption
  position    absolute
  max-width   700px
  width       100%
  z-index     1000
  top         215px
  left        50%
  margin-left -350px
  @media        screen and (max-width:768px)
    max-width   500px
    margin-left -250px
  @media        screen and (max-width:480px)
    max-width   300px
    margin-left -150px    
  h1
    font-size      34px
    font-weight    500
    color          white
    text-transform none
    text-align     center
    margin-bottom  15px 
    @media        screen and (max-width:768px)
      font-size 24px   
  h2
    color          white
    font-size      16px
    font-weight    500
    text-transform none
    margin-bottom  0
    text-align     center 
