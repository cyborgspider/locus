body.services
  h1
    background  url(../img/bg-services.jpg) no-repeat center 0
    height      265px
    text-indent -9999px
    margin-top  -40px
  .content
    h3
      color         white
      background    $blue
      display       inline-block
      padding       0 9px 0 8px
      border-radius 3px
      font-size     14px
      line-height   25px
      margin-bottom 20px
      up()
    ul.list
      list-style    square
      margin-left   40px
      margin-bottom 30px

#tab-nav
  list-style none
  float left
  clearfix()
  border-bottom solid 2px #0053d1
  margin 0
  li
    float         left
    background    linear-gradient(top, #e8e8e8, #fcfcfc)
    border        solid 1px #b3b3b3
    border-bottom none
    border-radius top 2px
    color         #5d5d5d
    padding       5px 12px
    height        53px
    line-height   18px
    max-width     110px
    box-sizing    border-box
    margin-right  1px
    cursor        pointer
    &.long
      max-width 180px
    &:hover
    &.active
      background   linear-gradient(top, #004fcf, #0094f0)
      border-color #00509c
      box-shadow   inset 0 1px 0 #49c1ff
      color        white
.tab-content
  display none
  padding 30px
  clear   both
  &.active
    display block

.readmore
  display block
  margin-top -20px
